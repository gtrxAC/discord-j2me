{
    "version": "2.0.0",
    "tasks": [
        {
            // TODO: Add possibility to compile a jar for a single specific variant
            "label": "Compile all JARs",
            "command": "/bin/bash ./build.sh",
            "windows": {
                "command": "build.bat"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Run Discord J2ME for MIDP2",
            "command": "/bin/bash ${config:kemulator.location}/KEmulator.sh ${workspaceFolder}/bin/discord_midp2.jar",
            "type": "shell",
            // "dependsOn": [
            //     "Compile all JARs"
            // ],
            "windows": {
                "command": "@echo | call ${config:kemulator.location}\\KEmulator_Console.bat ${workspaceFolder}\\bin\\discord_midp2.jar",
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
